# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/www/core/
/www/modules/contrib/
/www/themes/contrib/
/www/profiles/contrib/
/www/libraries/

# Ignore Node Modules folders
/www/themes/custom/*/node_modules/

# Ignore configuration files that may contain sensitive information
/www/sites/*/settings.php
/www/sites/default/settings.php
/www/sites/*/drushrc.php

# Ignore Drupal's file directory
/www/sites/*/files/

# Ignore SimpleTest multi-site environment.
/www/sites/simpletest

# Ignore potentially big files
*.sql
*.mysql
*.gz
*.tar
*.zip

# Ignore paths that may contain user-generated content
/www/sites/*/public
/www/sites/*/private
/www/sites/*/files-public
/www/sites/*/files-private

# Ignore paths that may contain temporary files
/www/sites/*/translations
/www/sites/*/tmp
/www/sites/*/cache

# Ignore locally generated files
.htaccess
.DS_Store
/.editorconfig
/.gitattributes

# Ignore files generated by common IDEs
/.idea/
/.vscode/

# DDEV
.ddev/
